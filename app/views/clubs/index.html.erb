<% if !current_user.club  %>
<div class="m-4">
  <%= link_to "Create your Club", new_club_path, class:"button-bb-with-margin"%>
</div>
<% end %>
<div class="my-2 text-center">
  <h1>Clubs</h1>
</div>
<div class="container">
  <div class="row">
    <% @clubs.each do |club| %>
      <div class="col-10 offset-1">
        <%= link_to club_path(club), class: "d-block" do %>
        <div class="container-profile w-100">
          <% if club.photo.attached? %>
            <%= cl_image_tag club.photo.key, class:"profile-img-club", alt:"Klubb logga" %>
          <% else %>
            <%= image_tag "footballpitch.jpg", class:"profile-img-club", alt:"Klubb logga" %>
          <% end %>
          <div class="content-profile-club">
            <div class="sub-content">
              <h1><%= club.name %></h1>
              <p><strong>Lead by </strong> <%= club.user.first_name %></p>
              <p><i class="fas fa-users"> <%= club.members.count %></i></p>
              <span class="location"><i class="fa fa-map-marker" aria-hidden="true"> <%= "Stockholm" %></i></span>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
