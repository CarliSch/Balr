<div class="banner">
  <%= image_tag "supercenter.png" %>
    <div id="text">
      <h1><%= @tournament.name %></h1>
      <p><%= @tournament.creator.name %></p>
    </div>
</div>

<div class="container">
  <div class="row mt-3" style="text-align: center; justify-content: center;">
    <div class="description">
      <h3>About <%= @tournament.name %></h3>
      <p><%= @tournament.description %></p>
    </div>
    <div class="rules">
      <h4>Tournament rules</h4>
      <p><%= @tournament.rules %></p>
    </div>
  </div>
  <div class="row" style="text-align: center; justify-content: center;">
    <div class="age-group">
      <h4>Age group</h4>
      <p><%= @tournament.age_group %> years old</p>
    </div>
  </div>
  <div class="row" style="text-align: center; justify-content: center;">
    <div class="skill-level">
      <h4>Skill level</h4>
      <p>This is a <%= @tournament.skill_level %> skill tournament</p>
    </div>
  </div>
  <div class="row" style="justify-content: center;">
    <div class="mt-5 mb-3">
      <%= link_to "Join request", tournament_tournament_requests_path(@tournament), class:"button-bb", method: :post %>
    </div>

    <% @tournament.teams.each do |team| %>
      <%= team.name %>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <% if @pending_tournament_requests.present? && current_user.owned_creator == @creator %>
    <div class="header-card-club">
      <h2>Tournament requests</h2>
    </div>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <% if current_user.owned_creator == @creator %>
        <% @pending_tournament_requests.each do |request| %>
          <div class="club-request-card">
            <div class="d-flex justify-content-center">
              <h5><%= request.club.name %></h5>
            </div>
              <div class="d-flex justify-content-center">
                <%= link_to tournament_request_path(request.id, choice: "accepted"),class:"button-accept badge badge-success d-flex justify-content-center align-items-center", method: :patch do %>
                  <i class="fas fa-check mt-1"></i>
                <% end %>
                <%= link_to tournament_request_path(request.id, choice: "declined"),class:"button-decline badge badge-secondary d-flex justify-content-center align-items-center", method: :patch do %>
                  <i class="fas fa-times mt-1"></i>
                <% end %>
              </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
