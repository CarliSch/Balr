<div class="banner">
  <%= image_tag "footballpitch.jpg" %>
    <div id="text">
      <h1>BALR</h1>
      <p>Start your footballing journey today</p>
    </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @matches.first do |match| %>
      <div class="match-card-hp width-250">
        <h2><%= match.location %></h2>
        <p><%= match.start_at %></p>
    <% end %>
      <div class="small-card-hp">
        <h2>spaces left</h2>
      </div>
    </div>
  </div>
</div>
