<div class="container">
  <div class="row" style="justify-content: center;">
    <div class="creator-card">
      <% @tournament_group.standings.each_with_index do |team, index| %>
        <div class="row" style="justify-content: space-between;">
          <h2><%= index +1 %></h2>
          <h2><%= team.club.name %></h2>
          <h2 class="text-white"><%= team.points %></h2>
        </div>
      <% end %>
    </div>
  </div>
  <% @tournament_group.tournament_matches.each do |match| %>
    <div class="row" style="justify-content: center;">
      <%= link_to tournament_group_tournament_match_path( @tournament_group, match), class: "w-100" do  %>
        <div class="match-card py-3">
          <% if match.home_team.tournament_club.club.photo.attached? %>
            <h2><%= cl_image_tag match.home_team.tournament_club.club.photo.key, class:"w-25 mr-3", alt:"Klubb logga" %> vs <%= cl_image_tag match.away_team.tournament_club.club.photo.key, class:"w-25 ml-3", alt:"Klubb logga" %></h2>
          <% else %>
            <%= image_tag "footballpitch.jpg", class:"profile-img-club", alt:"Klubb logga" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
