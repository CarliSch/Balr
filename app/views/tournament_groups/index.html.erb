  <div class="my-2 text-center">
    <h1>Tournament Groups</h1>
  </div>
<div class="container">
  <div class="row justify-content-center">
    <% @tournament_groups.each_with_index do |group, index| %>
      <div class="col-10">
        <%= link_to tournament_tournament_group_path(@tournament, group), class: "d-block" do %>
          <div class="groups-card">
            <h2><%= "Group - #{index}" %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
