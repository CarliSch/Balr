  <div class="container">
    <div class="row justify-content-center">
      <div class="col 4">
        <div class="create_match_card">
          <h1 class="header mb-4">Create Match</h1>
            <%= simple_form_for @match do |f| %>
              <h6 class= "letter_color">Add accurate location of the football pitch -></h6>
                <%= f.input :location,  input_html: { class: "bg-yellow" }, label_html: { class: "letter_color" }, label: false %>
                <h6 class= "letter_color">Add Date and Time of the match -></h6>
                <%= f.input :start_at, as: :datetime, html5: true, input_html: { class: "bg-yellow" }, label_html: { class: "letter_color" }%>
                <h6 class= "letter_color">Add the amount of players -></h6>
                <%= f.input :max_players, input_html: { class: "bg-yellow" }, label_html: { class: "letter_color" }%>
                  <div class="button-bb w-100 py-2 mt-4">Invite players</div>
                  <div class="form-actions">
                  <%= f.button :submit, "Create Match", class:"button-bb w-100 py-2 my-3" %>
                  </div>
        </div>
            <% end %>
      </div>
    </div>
  </div>
