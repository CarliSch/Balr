<div class="match-card px-3">
  <div class="location">
    <div>
      <div class="mr-2 location-icon"><i class="fas fa-map-marker-alt"></i></div>
      <p class="mb-0 location-text flex-grow-1"><%= match.location %></p>
    </div>
  </div>
  <div class="time-spots-card mt-3 mb-2">
    <div class="d-flex align-items-center justify-content-center">
    <%# if match.private_match %>
    <div><i class="fas fa-lock"></i> </div>
    <%# end %>

    <% end %>
        <% if full_date %>
          <p class="time-home mb-0">
            <i class="far fa-clock mr-3"></i>
            <div class="text-center">
              <%= match.start_at.strftime("%d.%b") %>
              <br>
              <%= match.start_at.strftime("%H:%M") %>
            </div>
          </p>
        <% else %>
          <p class="mb-0">
            <i class="far fa-clock mr-2"></i>
            <%= match.start_at.strftime("%H:%M") %>
          </p>
        <% end %>
      </p>
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <p class="mb-0">
        <i class="fas fa-users mr-3"></i>
        <%= match.match_users.count%>/<%= match.max_players %></p>
      </p>
    </div>
  </div>
</div>
