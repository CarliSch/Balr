<h1 class="header">Match Details:</h1>
  <%= render "match", match: @match %>
  <div class="d-flex match-card-show">
    <div class="match-card-A">
      <% @match.team_a_players.each.with_index(1) do |user, index| %>
        <p>
          <span class="mr-2"><%= index %>.</span>
          <% if user %>
            <span class="<%= 'text-danger' if current_user == user %>">
              <%= user.first_name.first %>.
              <%= user.last_name%>
            </span>
          <% else %>
            <span>you?</span>
          <% end %>
        </p>
      <% end %>
    </div>


    <div class="match-card">
      <% @match.team_b_players.each.with_index(1) do |user, index| %>
        <p>
          <span class="mr-2"><%= index %>.</span>
          <% if user %>
            <span class="<%= 'text-danger' if current_user == user %>">
              <%= user.first_name.first %>.
              <%= user.last_name%>
            </span>
          <% else %>
            <span>you?</span>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
