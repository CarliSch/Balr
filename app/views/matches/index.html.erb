<div class="container-match">
  <h1 class="header">Upcoming Matches</h1>
    <% @matches_by_date.each do |date, matches| %>
      <% if date.today? %>
        <h6 class="sub-header">Today</h6>
      <% else %>
        <h6 class="sub-header"><%= date.strftime("%A, %d. %B") %></h6>
      <% end %>
      <% matches.each do |match| %>
        <%= link_to match_path(match), class: "d-block" do %>
          <div class="match-card px-3">
            <div class="location">
              <div>
                <div class="mr-2 location-icon"><i class="fas fa-map-marker-alt"></i></div>
                <p class="mb-0 location-text"><%= match.location %></p>
              </div>
            </div>
            <div class="time-spots-card pt-2 mt-3">
              <div class="">
                <p>
                  <i class="far fa-clock mr-2"></i>
                  <%= match.start_at.strftime("%H:%M") %>
                </p>
              </div>
              <div>
                <p>
                  <i class="fas fa-users mr-2"></i>
                  <%= match.match_users.count%>/<%= match.max_spots %></p>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
</div>
